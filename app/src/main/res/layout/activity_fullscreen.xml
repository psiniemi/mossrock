<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".FullscreenActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/toggle_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        grid:columnCount="3"
        android:layout_weight="1">

        <ToggleButton
            android:id="@+id/kitchen"
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:background="@drawable/btn_border_on"
            android:padding="12dp"
            android:text="@string/kitchen"
            android:textOff="@string/kitchen"
            android:textOn="@string/kitchen"
            android:textSize="36sp"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal"
            app:layout_column="0"
            app:layout_row="0" />

        <ToggleButton
            android:id="@+id/entry"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:background="@drawable/btn_border_on"
            android:text="@string/entry"
            android:textOff="@string/entry"
            android:textOn="@string/entry"
            android:textSize="36sp"
            app:layout_column="1"
            app:layout_row="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_column="2"
            app:layout_row="0">

            <ToggleButton
                android:id="@+id/nuutti"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_border_on"
                android:text="@string/nuutti"
                android:textOff="@string/nuutti"
                android:textOn="@string/nuutti"
                android:textSize="36sp" />

            <SeekBar
                android:id="@+id/nuutti_dim"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="10"
                android:progress="3" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

</FrameLayout>